<TextView
	android:id="@+id/compHead"
	android:layout_width="248px"
	android:layout_height="wrap_content"
	android:layout_x="750px"
	android:layout_y="150px"
	android:gravity="center"
	android:focusable="false"
	android:textSize="22px"
	android:textColor="#FFFFFF"
	android:textStyle="bold"	
	/>
<TextView
	android:id="@+id/compDescription"
	android:layout_width="225px"
	android:layout_height="280px"
	android:layout_x="760px"
	android:layout_y="270px"	
	android:textSize="20px"
	android:focusable="false"
	android:textColor="#FFFFFF"
	android:textStyle="bold"	
	android:gravity="center"
	android:lineSpacingExtra="1.5px"
	/>
	
		<!-- clock date -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_x="100px"
	android:layout_y="450px"	
    >
<LinearLayout 
	android:paddingTop="0px"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<TextView  
	android:id="@+id/dateText"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="27sp"

    />
<DigitalClock 
    android:id="@+id/dc"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:gravity="center" 
    android:textSize="45sp"
       />
</LinearLayout>

</LinearLayout>
<AnalogClock
	android:layout_x="515px"
	android:layout_y="450px"	
    android:layout_width="100px" 
    android:layout_height="100px"
    android:id="@+id/ALClock"

    
    />
