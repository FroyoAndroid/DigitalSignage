<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

<!-- android:background="@drawable/staticbackground" -->
<VideoView
	android:layout_height="265px"
	android:layout_width="552px" 
    android:id="@+id/videoviewsmall"
    android:layout_gravity="center"
    android:layout_y="145px"
    android:layout_x="70px"
    /> 
    
<TextView
	 android:id="@+id/tagline"
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:singleLine="true"            
     android:layout_y="30px"
     android:layout_x="70px"
     android:textStyle="bold"
     android:textSize="22px"    
     android:textColor="#FF9900"
     
     />     
<ImageView
	 android:id="@+id/compLogo"
     android:layout_width="200px" 
     android:layout_height="70px"
     android:singleLine="true"            
     android:layout_y="15px"
     android:layout_x="760px"
	/>
	
<LinearLayout
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	/>		
<TextView
	 android:id="@+id/marqee"
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:singleLine="true"            
     android:layout_y="641px"
     android:layout_x="105px"
     android:textStyle="bold"
     android:textSize="22px"    
     android:textColor="#FF9900"
     />
